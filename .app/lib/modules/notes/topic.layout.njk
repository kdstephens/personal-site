---js
{
  layout: "core/base.layout.njk",
  permalink: function({ page, app }) {
    const url = this.slugifyPath(page.filePathStem).replace(/\/index$/, '');
    const isRoot = url === "";
    if (isRoot) return "/";

    const pathPrefix = app.notes.pathPrefix.replace(/^\/|\/$/, '');
    return `/${[pathPrefix, url].filter(Boolean).join('/')}/`;
  }
}
---

<div class="page" data-pagefind-body>
  <main class="page__main" id="app-content">
    <article>
      <h1 class="page__title">{{ headline or title or page.fileSlug }}</h1>
      {% if description %}
        <p class="page__description">{{ description }}</p>
      {% endif %}
      {% if content | trim %}
        <div class="article">
          {{ content | safe }}
        </div>
      {% endif %}

      {% set notesQuery = topicNotesQuery or projectNotesQuery %}
      {% if notesQuery %}
        {% set notes = collections.notes | query(notesQuery) %}
        <ul role="list" class="stack topic-notes" data-stack="4">
          {% for note in notes %}
            <li class="stack topic-note">
              <a href="{{ note.url }}" class="note-link">
                {{ note.data.title or note.page.fileSlug }}
              </a>
              {% if note.data.description %}
                <p class="topic-note__description">{{ note.data.description }}</p>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </article>

    <div class="page__nav">
      {% include 'modules/page-nav/page-nav.partial.njk' %}
    </div>
  </main>

  {% if panel %}
  <div class="page__panel" data-ref="panel">
    {% include 'modules/notes/notes-panel.partial.njk' %}
  </div>
  {% endif %}
</div>
